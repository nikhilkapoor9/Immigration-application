<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherDetails">



    <include layout="@layout/activity_add_details"
        android:id="@+id/detailsLayout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/feesText"
            android:text="Pay Fees"
            android:textSize="35dp"
            android:layout_marginTop="300dp"
            ></TextView>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/feesValue"
            android:inputType="number"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/feesText"
            android:hint="enter the student id here"></EditText>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/payFeesButton"
            android:layout_below="@+id/feesText"
            android:text="PAY FEES"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginAcces"
            android:text="Grant Login Access"
            android:layout_below="@+id/payFeesButton"></Button>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/loginAcces"
            android:layout_below="@+id/feesValue"
            android:entries="@array/LoginAccess"
            android:layout_marginTop="55dp"></Spinner>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>