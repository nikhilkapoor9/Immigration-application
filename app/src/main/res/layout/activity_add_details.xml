<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDetails">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/userName"
              android:text="Name :"
              android:textSize="30dp"
              ></TextView>
          <EditText
              android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:id="@+id/userNameValue"
              android:layout_marginLeft="50dp"
              android:hint="enter the name "></EditText>


      </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userEmail"
            android:text="Email :"
            android:textSize="30dp"
            ></TextView>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/userEmailValue"
            android:layout_marginLeft="50dp"
            android:hint="enter the email-id "></EditText>


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userPassword"
            android:text="password :"
            android:textSize="30dp"
            ></TextView>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/userPasswordValue"
            android:hint="enter the password "></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userRePassword"
            android:text="Re-paswrd:"
            android:textSize="30dp"
            ></TextView>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/rePasswordValue"
            android:hint="enter the password "></EditText>

    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>